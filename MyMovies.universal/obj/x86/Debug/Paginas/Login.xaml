<Page
    x:Class="MyMovies.universal.Paginas.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMovies.universal.Paginas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Assets\capa.jpg" Stretch="None"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Rectangle Fill="White" Opacity="0.6" Margin="-20,10,30,-70" />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.4*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <PersonPicture Margin="0,10,30,0"/>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBox x:ConnectionId='5' PlaceholderText="EMAIL" Height="40" Width="500" Background="CadetBlue" x:Name="EmailTextBox"  Margin="0,0,30,-30" BorderBrush="Gray" IsSpellCheckEnabled="False"/>
                </Grid>
                <Grid Grid.Row="2">
                    <PasswordBox x:ConnectionId='4' PlaceholderText="PASSWORD" Height="40" Width="500" Background="CadetBlue" x:Name="PasswordBox" Margin="0,0,30,-30" BorderBrush="Gray"/>
                </Grid>
                <Grid Grid.Row="3">
                    <Button x:ConnectionId='3' Content="Confirmar" HorizontalAlignment="Center" Background="Gray"  Margin="0,10,100,-30" VerticalAlignment="Top"                      />
                    <TextBlock Text="Ainda não tem uma conta?" Foreground="Gray" HorizontalAlignment="Right" Margin="0,40,50,0"/>
                </Grid>
                <Button x:ConnectionId='2' Grid.Row="3" Content="REGISTE-SE" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Gray" Margin="0,0,80,-80"                        />
            </Grid>
        </Grid>
        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <TextBlock Text="LOGIN"  Foreground="Gray"  HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="40"/>
            </Grid>
            <Grid Grid.Column="2">
                <AutoSuggestBox PlaceholderText="Pesquisa" QueryIcon="Find" BorderBrush="AntiqueWhite" Width="250" HorizontalAlignment="Right"/>
            </Grid>

        </Grid>
    </Grid>
</Page>

